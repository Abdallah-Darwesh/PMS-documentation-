@model IEnumerable<PharmacyInventorySystem.Models.Category>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Category List</h2>
        <a class="btn btn-success" asp-area="Manager" asp-controller="Category" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Add New Category
        </a>
    </div>

    <table class="table table-hover shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Category Name</th>
                <th>Number of Products</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">No categories found.</td>
                </tr>
            }
            else
            {
                @* هنا نستخدم Select لجلب العنصر مع فهرسه *@
                @foreach (var pair in Model.Select((cat, index) => new { Cat = cat, Index = index }))
                {
                    <tr>
                        <td>@(pair.Index + 1)</td>
                        <td>@pair.Cat.CategoryName</td>
                        <td>@(pair.Cat.Products?.Count ?? 0)</td>
                        <td>
                            <a asp-area="Manager"
                               asp-controller="Category"
                               asp-action="Details"
                               asp-route-id="@pair.Cat.CategoryID"
                               class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-area="Manager"
                               asp-controller="Category"
                               asp-action="Edit"
                               asp-route-id="@pair.Cat.CategoryID"
                               class="btn btn-warning btn-sm me-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-area="Manager"
                               asp-controller="Category"
                               asp-action="Delete"
                               asp-route-id="@pair.Cat.CategoryID"
                               class="btn btn-danger btn-sm">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
