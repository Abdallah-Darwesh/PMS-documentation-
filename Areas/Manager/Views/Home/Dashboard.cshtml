@model PharmacyInventorySystem.ViewModels.DashboardViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Manager Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary fw-bold">
        👨‍💼 Welcome to the Manager Dashboard
    </h2>

    <!-- Summary Cards -->
    <div class="row text-center g-4 mb-5">
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary">Total Employees</h5>
                    <p class="fs-4 fw-bold">@Model.EmployeeCount</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-success">Total Orders</h5>
                    <p class="fs-4 fw-bold">@Model.TotalOrders</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-info">Total Returns</h5>
                    <p class="fs-4 fw-bold">@Model.TotalReturns</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-danger">Low Stock Alerts</h5>
                    <p class="fs-4 fw-bold">@Model.LowStockAlerts</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Action Buttons -->
    <div class="row text-center g-4">
        <div class="col-md-3">
            <a asp-area="Manager" asp-controller="Supplier" asp-action="Index"
               class="btn btn-primary w-100 p-4 fs-5 shadow-sm">
                <i class="bi bi-boxes fs-3 mb-2 d-block"></i>
                Manage Suppliers
            </a>
        </div>
        <div class="col-md-3">
            <a asp-area="Manager" asp-controller="Category" asp-action="Index"
               class="btn btn-secondary w-100 p-4 fs-5 shadow-sm">
                <i class="bi bi-list-ul fs-3 mb-2 d-block"></i>
                Manage Categories
            </a>
        </div>
        <div class="col-md-3">
            <a asp-area="Manager" asp-controller="ManagerSupplierOrder" asp-action="Index"
               class="btn btn-warning w-100 p-4 fs-5 shadow-sm">
                <i class="bi bi-pencil-square fs-3 mb-2 d-block"></i>
                Manage Orders
            </a>
        </div>
        <div class="col-md-3">
            <a asp-area="Manager" asp-controller="ReturnsReport" asp-action="Index"
               class="btn btn-info w-100 p-4 fs-5 shadow-sm">
                <i class="bi bi-arrow-repeat fs-3 mb-2 d-block"></i>
                Manage Returns
            </a>
        </div>
        <div class="col-md-3">
            <a asp-area="Manager" asp-controller="SalesReport" asp-action="Index"
               class="btn btn-success w-100 p-4 fs-5 shadow-sm">
                <i class="bi bi-graph-up fs-3 mb-2 d-block"></i>
                Sales Reports
            </a>
        </div>

    </div>


</div>
